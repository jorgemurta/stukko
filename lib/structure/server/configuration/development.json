{
	"version": "0.0.1",
	"env": "development",
	"browser": false,
	"host": "localhost",
	"port": 9000,
	"statusErrors": true,
	"db": {
		"module": "dirty",
		"modelCase": "capitalize",
		"connect": true
	},
	"assets": {
		"clean": true,
		"link": {
			"ignorePath": [
				"/web/public",
				"/manage/public"
			],
			"starttag": "<!-- inject:{{ext}} -->",
			"endtag": "<!-- endinject -->"
		},
		"watch": true,
		"backup": true,
		"mixin": {
			"src": [
				"./web/assets/mixin/**/*.css",
				"./web/assets/mixin/**/*.js",
				"./web/assets/mixin/**/*.css",
				"./manage/assets/mixin/**/*.js"
			],
			"concat": [
				"mixin.css",
				"mixin.js",
				"mixin.css",
				"mixin.js"
			],
			"dest": [
				"./web/public/css",
				"./web/public/js",
				"./manage/public/css",
				"./manage/public/js"
			]
		},
		"minify": {
			"src": [
				"./web/assets/minify/**/*.css",
				"./web/assets/minify/**/*.js",
				"./manage/assets/minify/**/*.css",
				"./manage/assets/minify/**/*.js"
			],
			"dest": [
				"./web/public/css",
				"./web/public/js",
				"./manage/public/css",
				"./manage/public/js"
			]
		},
		"preprocess": {
			"src": [
				"./web/assets/preprocess/*.less",
				"./web/assets/preprocess/*.sass",
				"./manage/assets/preprocess/*.less"
			],
			"dest": [
				"./web/public/css",
				"./web/public/css",
				"./manage/public/css"
			]
		},
		"framework": {
			"src": [
				"./web/assets/framework/**/*.js",
				"./manage/assets/framework/**/*.js"
			],
			"concat": [
				"app.js",
				"manage.js"
			],
			"dest": [
				"./web/public/js",
				"./manage/public/js"
			],
			"minify": false
		}
	},
	"logs": {
		"path": "/logs",
		"level": "info"
	},
	"express": {
		"layout": "layout",
		"engine": "hogan",
		"view engine": "html",
		"views": "/web/views",
		"jsonp callback name": "callback"
	},
	"modules": {
		"security": "/server/security",
		"middleware": "/server/middleware",
		"handlers": "/server/handlers",
		"models": "/server/models",
		"controllers": "/server/controllers",
		"routes": "/server/routes",
		"services": "/server/services"
	},
	"middleware": {
		"logger": {
			"use": "morgan"
		},
		"bodyParser": {
			"use": "body-parser"
		},
		"cookieParser": {
			"use": "cookie-parser",
			"options": "8c5ddf5befacb8439"
		},
		"session": {
			"use": "express-session",
			"options": {
				"name": "memory",
				"key": "app.sid",
				"secret": "8c5ddf5befacb8439"
			}
		},
		"methodOverride": {
			"use": "method-override"
		},
		"csrf": {
			"use": "csurf",
			"enabled": false
		},
		"cors": {
			"use": "cors",
			"enabled": false
		},
		"i18n": {
			"use": "i18n",
			"enabled": false
		},
		"static": {
			"options": "/web/public"
		},
		"partials": {
			"options": "/web/public/partials"
		},
		"favicon": {
			"use": "serve-favicon",
			"options": "/web/public/img/shared/favicon.ico"
		},
		"inject": {}
	}
}